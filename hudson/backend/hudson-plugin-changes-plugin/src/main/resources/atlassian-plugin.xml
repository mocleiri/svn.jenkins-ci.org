<atlassian-plugin key="org.jvnet.hudson.confluence.plugins.hudson-plugin-changes-plugin"
                  name="hudson-plugin-changes-plugin">
    <plugin-info>
        <description>Hudson Plugin Changes Macro Plugin</description>
        <version>1.0</version>
        <vendor name="Hudson" url="http://hudson-ci.org/"/>
    </plugin-info>

    <macro name="hudson-plugin-changes"
           class="org.jvnet.hudson.confluence.plugins.HudsonPluginChangesMacro"
           key="hudson-plugin-changes">
        <description>
          Runs a report of unreleased changes in the Hudson plugins subversion repository.
        </description>
    </macro>

    <macro name="hudson-plugin-changes-internal"
           class="org.jvnet.hudson.confluence.plugins.HudsonPluginChangesReport"
           key="hudson-plugin-changes-internal">
        <description>
          Do not use directly; use hudson-plugin-changes.
        </description>
    </macro>
</atlassian-plugin>
