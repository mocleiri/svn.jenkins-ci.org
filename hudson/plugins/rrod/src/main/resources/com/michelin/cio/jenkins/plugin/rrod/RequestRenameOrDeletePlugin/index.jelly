<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt" xmlns:p="/lib/hudson/project">
    <style>
                #tab {
                margin: 10px 0;
                text-align: center;
                border-collapse: collapse;
                border-bottom: 1px solid #999;                
                }

                #tab th {
                font-size: 13px;
                font-weight: bold;
                padding: 8px;
                border: 1px solid #999;
                vertical-align:text-top;
                }

                #tab td {
                padding: 8px;
                border-left: 1px solid #999;
                border-right: 1px solid #999;
                }

                #tab tbody tr:hover { background: #CCD9E3; border:1px solid #999}
               
                .name_column{
                padding: 3px;
                width: 20%;
                }                                
                
                #button-container{
                width: 800px;
                margin-bottom : 10px;
                }
                
                input.button{
                height: 25px;
                }
                #errors {
                color: #CC0000;
                font-weight: bold;
                min-height: 16px;                
                }                                               
    </style>
    <script types="text/javascript">
    
    function toogleAll(){
       $$('.checkbox').each(
          function(e){
             e.checked = $('checkbox_reference').checked
          }
       );
    }
        </script>
    <l:layout secured="true">
        <st:include it="${app}" page="sidepanel.jelly"/>
        <l:main-panel>            
            <h1>${%RROD.plugin.title}</h1>
            <j:choose>
                <j:when test="${not it.errors.isEmpty()}">
                    <div id="errors">
                        <div class="error">
                            <strong>${%RROD.plugin.errors}</strong>
                        </div>
                        <ul>
                            <j:forEach var="error" items ="${it.errors}">                    
                                <li>${error}</li>
                            </j:forEach>
                        </ul>
                    </div>
                </j:when>
            </j:choose>
            <j:choose>
                <j:when test="${it.requests.isEmpty()}">
                    <strong>${%RROD.plugin.requests.empty}</strong>
                </j:when>

                <j:otherwise>
                    <form method="POST" name="pendingRequests" action="manageRequests">
                        <div id="button-container">
                            <input type="submit" class="button" style="margin-left: 100px; margin-right:100px"
                                   name="discard" value="${%RROD.plugin.button.discard}"/>
                            <input type="submit" class="button" name="apply" value="${%RROD.plugin.button.apply}"/>
                        </div>
                        <table id="tab" cellpadding="3" cellspacing="3">
                            <thead class="fixedHeader">
                                <tr>
                                    <th class="first_column">${%RROD.plugin.requests.header.select}<br />                                    
                                    <input type="checkbox" onclick="toogleAll()" id="checkbox_reference"/>
                                    </th>
                                    <th class="name_column">${%RROD.plugin.requests.header.request}</th>                                       
                                    <th class="name_column">${%RROD.plugin.requests.header.requester}</th>
                                    <th class="name_column">${%RROD.plugin.requests.header.creationDate}</th>
                                    <th class="name_column">${%RROD.plugin.requests.header.jobMainPage}</th>
                                    <th class="name_column">${%RROD.plugin.requests.header.jobConfigFile}</th>
                                </tr>
                            </thead>
                            <tbody>                                
                                <j:forEach begin="0" end="${it.requests.size() - 1}" step="1" var="index">
                                    <j:set var="request" value="${it.requests.get(index)}"/>
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selected" value="${index}" class="checkbox"/>
                                        </td>
                                        <td>
                                    ${request.message}
                                        </td>
                                        <td>
                                            <j:choose>
                                                <j:when test="${not empty request.username}">
                                                    <a href="${rootURL}/user/${request.username}">
                                                        <b>${request.username}</b>
                                                    </a>
                                                </j:when>
                                                <j:otherwise>
                                           ${%RROD.plugin.text.anonymous} 
                                                </j:otherwise>
                                            </j:choose>
                                        </td>
                                        <td>
                                                 ${request.creationDate}   
                                        </td>
                                        <td>                                                   
                                            <a href="${rootURL}/job/${request.project}">${request.project}</a>
                                        </td>
                                        <td>                                                   
                                            <a href="${rootURL}/job/${request.project}/config.xml">Config file</a>
                                        </td>
                                    </tr>
                                </j:forEach>
                            </tbody>
                        </table>
                    </form>
                </j:otherwise>
            </j:choose>

        </l:main-panel>
    </l:layout>
</j:jelly>
