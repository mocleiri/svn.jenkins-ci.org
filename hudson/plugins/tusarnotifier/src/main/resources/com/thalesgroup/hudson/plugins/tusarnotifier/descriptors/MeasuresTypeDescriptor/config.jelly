<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

	<f:entry field="pattern" title="${descriptor.displayName}" >
		<table width="100%"  border='0'  cellspacing='0' padding="0">
			<tr>
			
			<j:choose>
				<j:when test="${instance==null}">
					<td width="50%" style="${td}">
                        <input name="_.inputTypeKey" value="${descriptor.type.inputTypeKey}" type="hidden"/>
						<label>Pattern</label>
						<f:textbox  />
					</td>							  
				</j:when>
				<j:otherwise>
					<td width="50%" style="${td}">							
                          <input name="_.inputTypeKey" value="${instance.inputTypeKey}" type="hidden"/>
						<label>Pattern</label>
						<f:textbox />
					</td>					
				</j:otherwise>
			</j:choose>
			
			
			</tr>
		</table>
	</f:entry>

</j:jelly>
