<!--
  To have TestNG generate its native output format, we need to go through Ant.
-->
<project default="build">
  <taskdef resource="testngtasks" classpath="lib/testng.jar"/>
  
  <target name="build">
    <mkdir dir="target/classes" />
    <javac srcdir="src/test/java" destdir="target/classes" source="1.5" target="1.5">
      <classpath>
        <fileset dir="lib" />
      </classpath>
    </javac>
    <testng outputDir="target/testng-reports">
      <classfileset dir="target/classes" includes="**/*.class" />
      <classpath>
        <fileset dir="lib" />
        <pathelement  path="target/classes" />
      </classpath>
    </testng>
  </target>
</project>