<!--
  Displays the console output
-->
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
  <l:layout title="${it.name} Changes">
    <st:include page="sidepanel.jelly" />
    <l:main-panel>
      <j:set var="from" value="${request.getParameter('from')}"/>
      <j:set var="to" value="${request.getParameter('to')}"/>

      <t:buildCaption>
        Changes
        <j:if test="${from!=null}"> from #${from}</j:if>
        <j:if test="${to!=null}"> to #${to}</j:if>
      </t:buildCaption>
      <j:forEach var="b" items="${h.filter(it.buildsAsMap,from,to).values()}">
        <j:if test="${b.changeSet.iterator().hasNext()}">
          <h2><a href="${b.number}/changes">
            ${b.displayName} :
            <i:formatDate value="${b.timestamp.time}" type="both" dateStyle="medium" timeStyle="medium"/>
          </a></h2>
  
          <ol>
            <j:forEach var="c" items="${b.changeSet.iterator()}">
              <li>
                <st:out value="${c.msg}" />
                by
                <a href="${rootURL}/${c.author.url}/">${c.author}</a>
              </li>
            </j:forEach>
          </ol>
        </j:if>
      </j:forEach>
    </l:main-panel>
  </l:layout>
</j:jelly>