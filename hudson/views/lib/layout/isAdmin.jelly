<j:jelly xmlns:j="jelly:core" xmlns:d="jelly:define" xmlns:s="jelly:stapler">
  <j:choose>
    <j:when test="${app.useSecurity}">
      <s:isUserInRole role="admin">
        <d:invokeBody />
      </s:isUserInRole>
    </j:when>
    <!-- if the security is disabled, show it anyway -->
    <j:otherwise>
      <d:invokeBody />
    </j:otherwise>
  </j:choose>
</j:jelly>