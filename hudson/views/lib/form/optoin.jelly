<!--
	<option> tag that takes true/false for selected
-->
<j:jelly xmlns:j="jelly:core" xmlns:d="jelly:define">
	<j:choose>
		<j:when test="${selected}">
			<option value="${value}" selected="true"><d:invokeBody/></option>
		</j:when>
		<j:otherwise>
			<option value="${value}"><d:invokeBody/></option>
		<j:otherwise>
	</j:choose>
</j:jelly>