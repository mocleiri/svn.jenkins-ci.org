<!--
	<input type="checkbox"> tag that takes true/false for @checked
-->
<j:jelly xmlns:j="jelly:core" xmlns:d="jelly:define">
	<j:choose>
		<j:when test="${checked}">
			<input type="checkbox" name="${name}" onclick="${onclick}" checked="true"/>
		</j:when>
		<j:otherwise>
			<input type="checkbox" name="${name}" onclick="${onclick}"/>
		</j:otherwise>
	</j:choose>
</j:jelly>