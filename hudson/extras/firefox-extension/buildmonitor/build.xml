<project name="buildmon" default="package" basedir=".">

	<property name="package.name" value="buildmonitor"/>
	<property name="source.dir" value="src"/>
	<property name="stage.dir" value="stage"/>
	<property name="version" value="0.8.2-SNAPSHOT"/>

	<target name="clean">
		<delete dir="${stage.dir}"/>
	</target>
	<target name="package">
		<mkdir dir="${stage.dir}"/>
		<copy todir="${stage.dir}">
			<fileset dir="${source.dir}" excludes="chrome/*/"/>
		</copy>
		<zip destfile="${stage.dir}/chrome/buildmonitor.jar" basedir="${source.dir}/chrome"/>
		<zip destfile="${stage.dir}/${package.name}-${version}.xpi" basedir="${stage.dir}"/>
	</target>

</project>
