<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://buildmonitor/skin/buildmonitor.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://buildmonitor/locale/buildmonitor.dtd">
<overlay id="buildmonitor-overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

	<script type="application/x-javascript" src="chrome://buildmonitor/content/scripts/buildmonitor-util.js"/>
	<script type="application/x-javascript" src="chrome://buildmonitor/content/scripts/buildmonitor-core.js"/>
	<script type="application/x-javascript" src="chrome://buildmonitor/content/scripts/buildmonitor.js"/>
	<script type="application/x-javascript" src="chrome://buildmonitor/content/scripts/pretty.js"/>

	<statusbar id="status-bar">
		<tooltip id="buildmonitor-tooltip" class="info" noautohide="true">
			<vbox id="buildmonitor-box">
				<label class="title" value="Hudson Build Monitor"/>
				<label value="Please configure the Feed URL via Preferences menu."/>
			</vbox>
		</tooltip>
		<menupopup id="buildmonitor-menu">
			<menuitem label="&buildmonitor.menu.dashboard;" oncommand="goToDashboard();"/>
		    <menuseparator/>
			<menuitem label="&buildmonitor.menu.preferences;" oncommand="window.openDialog('chrome://buildmonitor/content/prefs.xul', 'prefs', 'centerscreen,chrome,modal');"/>
		    <menuseparator/>
		    <menuitem label="&buildmonitor.menu.refresh;" oncommand="processFeed();"/>
		</menupopup>
		<menupopup id="buildmonitor-builds" class="info"/>
		<statusbarpanel id="buildmonitor-panel" class="statusbarpanel-menu-iconic" src="chrome://buildmonitor/skin/icon_16.png" popup="buildmonitor-builds" context="buildmonitor-menu" tooltip="buildmonitor-tooltip"/>
	</statusbar>

</overlay>