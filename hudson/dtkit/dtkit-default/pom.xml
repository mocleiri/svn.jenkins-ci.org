<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jvnet.hudson.dtkit</groupId>
        <artifactId>dtkit-metrics-default-parent</artifactId>
        <version>1</version>
    </parent>

    <groupId>org.jvnet.hudson.dtkit</groupId>
    <artifactId>dtkit-default</artifactId>
    <version>0.7-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>DTKIT Default</name>
    <url>http://wiki.hudson-ci.org/display/HUDSON/DTKIT</url>

    <licenses>
        <license>
            <name>MIT license</name>
            <comments>All source code is under the MIT license.</comments>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>gbois</id>
            <name>Gregory Boissinot</name>
            <email>gbois@dev.java.net</email>
            <timezone>+1</timezone>
            <roles>
                <role>Project owner</role>
                <role>Project developer</role>
            </roles>
        </developer>
        <developer>
            <name>Joel Forner</name>
            <timezone>+1</timezone>
            <roles>
                <role>Project developer</role>
            </roles>
        </developer>
    </developers>

    <modules>
        <!-- Generic DTKIT modules containing default set of metrics -->
        <module>dtkit-default-junit</module>
        <module>dtkit-default-tusar</module>
        <!-- DTKIT Maven modules aimed at the Hudson CI server -->
        <module>dtkit-default-junit-hudson</module>
        <module>dtkit-default-tusar-hudson</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.jvnet.hudson.dtkit</groupId>
                <artifactId>dtkit-default-junit</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.jvnet.hudson.dtkit</groupId>
                <artifactId>dtkit-default-tusar</artifactId>
                <version>${project.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>
</project>
