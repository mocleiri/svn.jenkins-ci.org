<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <d:taglib uri="local">
    <d:tag name="config">
      <f:entry title="${%Domain Name}" field="domain" help="/plugin/active-directory/help/domain-name-${descriptor.canDoNativeAuth()?'windows':'unix'}.html">
        <f:textbox />
      </f:entry>
	   <f:entry title="${%Server}" field="server">
        <f:textbox />
      </f:entry>
    </d:tag>
  </d:taglib>
  <j:choose xmlns:local="local">
    <j:when test="${!descriptor.canDoNativeAuth()}">
      <local:config />
      <f:advanced>
        <f:entry field="site" title="${%Site}">
          <f:textbox />
        </f:entry>
        <f:entry field="bindName" title="${%Bind DN}">
          <f:textbox />
        </f:entry>
        <f:entry field="bindPassword" title="${%Bind Password}">
          <f:password />
        </f:entry>
      </f:advanced>
      <f:nested>
        <f:validateButton with="domain,site,bindName,bindPassword,server" title="${%Test}" method="validate"/>
      </f:nested>
    </j:when>
    <j:otherwise>
      <f:advanced>
        <local:config />
      </f:advanced>
    </j:otherwise>
  </j:choose>
</j:jelly>